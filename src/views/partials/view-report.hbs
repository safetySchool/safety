    </script>
    <script src="/public/app/report/view-report/js/datatableViewReport.js"></script>
    <script src="/public/app/report/view-report/js/ControllerViewReport.js"></script>
    <script src="/public/app/report/view-report/js/mainViewReport.js"></script>
    <script src="/public/app/report/view-report/js/ViewReport.js"></script>
{{/extend}}
