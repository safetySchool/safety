{{#extend "css"}}
    <link rel="stylesheet" href="/tools/fancybox/dist/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/public/app/scanner-module/css/custom_style.css">
    <link rel="stylesheet" href="/tools/bootstrap-fileinput/css/fileinput.min.css">
    <style>
        video {
            width: 100% !important;
            height: 70vh !important;
        }

        .modal-attachment {
            text-align: center !important;
        }
    </style>
{{/extend}}
<div class="modal fade modal-attachment" id="modal-attachment">
    <div class="modal-dialog modal-lg modal-dialog-attachment">
        <div class="modal-content">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Cerrar</button>
                <h4 class="modal-title">CAPTURA DE ARCHIVOS ADJUNTOS</h4>
            </div>
            <input type="hidden" id="study-data-scanner">
            <div class="modal-body">
                <ul class="nav nav-tabs bg-teal-300">
                    <li id="scann-tab-module" class="active"><a data-toggle="tab" href="#scannTabModule">ESCANEAR</a></li>
                    <li id="upload-tab-module"><a data-toggle="tab" href="#uploadTabModule">SUB√çR IMAGEN</a></li>
                    <li id="document-tab-module"><a data-toggle="tab" href="#documentsTabModule">DOCUMENTOS ADJUNTOS</a></li>
                </ul>
                <div class="tab-content">
                    <div id="scannTabModule" class="tab-pane fade in active">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <!-- <label for="">Tipo de documento</label> -->
                                    <br>
                                    <select id="documentType" class="selectpicker show-menu-arrow" data-live-search="false" title="Seleccione tipo de documento..." data-width="100%">
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group" style="margin-top: 5%;">
                                    <button id="captureImage" type="button" class="btn bg-pink">Capturar <i class="fa fa-camera-retro"></i></button>
                                    <button id=removeImage type="button" class="btn bg-indigo-800" disabled>Remover <i class="fa fa-ban"></i></button>
                                    <button id="uploadImage" type="button" class="btn btn-success" disabled>Subir archivos</button>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <video autoplay></video>
                                <img class="img-responsive img-responsive-attachment" style="display: none;" id="photo">
                                <canvas class="hidden" id="canvas"></canvas>
                            </div>
                        </div>
                    </div>
                    <div id="documentsTabModule" class="tab-pane fade">
                        <div class="row" id="image-content-module">
                        </div>
                    </div>
                    <div id="uploadTabModule" class="tab-pane fade">
                        <input id="upload-files-input" name="upload-files-input" type="file" width="100%">
                        <hr>
                        <button id="btnUploadFile" type="button" class="btn btn-outline bg-pink border-pink">Subir <i class="fas fa-upload"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#extend "js"}}
    <script src="/tools/fancybox/dist/jquery.fancybox.min.js"></script>
    <script src="/tools/bootstrap-fileinput/js/plugins/piexif.min.js" type="text/javascript"></script>
    <script src="/tools/bootstrap-fileinput/js/plugins/sortable.min.js" type="text/javascript"></script>
    <script src="/tools/bootstrap-fileinput/js/plugins/purify.min.js" type="text/javascript"></script>
    <script src="/tools/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="/tools/bootstrap-fileinput/js/fileinput.js" type="text/javascript"></script>
    <script src="/tools/bootstrap-fileinput/themes/fas/theme.min.js" type="text/javascript"></script>
    <script src="/tools/bootstrap-fileinput/js/locales/es.js" type="text/javascript"></script>
    <script>
        const video = document.querySelector('video');
        var track = null;
    </script>
    <script src="/public/app/scanner-module/js/ScannerModule.js"></script>
    <script src="/public/app/scanner-module/js/main.js"></script>
    <script src="/public/app/scanner-module/js/controller.js"></script>
{{/extend}}
