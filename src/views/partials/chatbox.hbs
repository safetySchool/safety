<div class="modal fade" id="chatBoxModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="row bootstrap snippets">
                    <div class="col-md-12">
                        <!-- DIRECT CHAT PRIMARY -->
                        <div class="box box-primary direct-chat direct-chat-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">CHAT Paciente: <b id="patient-chat"></b></h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <!-- Conversations are loaded here -->
                                <div id="direct-chat-messages" class="direct-chat-messages">
                                </div>
                                <!--/.direct-chat-messages-->
                                <!-- Contacts are loaded here -->
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <div>
                                    <div class="input-group">
                                        <input id="input-text-comment" type="text" name="message" placeholder="Escriba su mensaje ..." class="form-control">
                                        <span class="input-group-btn">
                                            <button id="btnSaveComment" class="btn btn-success">Enviar <i class="icon-paperplane" aria-hidden="true"></i></button>
                                        </span>
                                    </div>
                                    <br>
                                    <span id="info-typing" class="text-info"></span>
                                </div>
                            </div>
                            <!-- /.box-footer-->
                        </div>
                        <!--/.direct-chat -->
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
