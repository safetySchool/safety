<div class="page-header border-bottom-0">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="fas fa-chart-bar"></i><span class="font-weight-semibold"> GRÁFICOS</span>
            </h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>
<div class="content pt-0">
    <div class="card">
        <div class="row mr-2 ml-1">
            <div class="col-8">
                <h5 class="card-header text-secondary"><i class="fas fa-chart-bar"></i> Accidentes</h5>
            </div>
            <div class="col-4 mt-3">
                <select id="accidents" class="form-control">
                </select>
            </div>
        </div>
        <div class="card-body">
            <canvas id="AccidentsChart"></canvas>
        </div>
    </div>
    <div class="card">
        <div class="row mr-2 ml-1">
            <div class="col-8">
                <h5 class="card-header text-secondary"><i class="fas fa-chart-scatter"></i> Días perdidos
                </h5>
            </div>
            <div class="col-4 mt-3">
                <select id="lostDays" class="form-control">
                </select>
            </div>
        </div>
        <div class="card-body">
            <canvas id="LostDaysChart"></canvas>
        </div>
    </div>
    <div class="card">
        <div class="row mr-2 ml-1">
            <div class="col-8">
                <h5 class="card-header text-secondary"><i class="fas fa-chart-pie"></i> Casuística accidente laboral
                </h5>
            </div>
            <div class="col-4 mt-3">
                <select id="yearsWorkAccident" class="form-control">
                </select>
            </div>
        </div>
        <div class="card-body">
            <canvas id="WorkAccidentCaseChart"></canvas>
        </div>
    </div>
    <div class="card">
        <div class="row mr-2 ml-1">
            <div class="col-8">
                <h5 class="card-header text-secondary"><i class="fas fa-chart-pie"></i> Casuística accidente escolar
                </h5>
            </div>
            <div class="col-4 mt-3">
                <select id="yearsSchoolAccident" class="form-control">
                </select>
            </div>
        </div>
        <div class="card-body">
            <canvas id="SchoolAccidentsCaseChart"></canvas>
        </div>
    </div>
</div>
<div id="modal-crud" class="modal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">FORMULARIO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="crud-form">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label for="name">NOMBRE</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre"
                                    autocomplete="off" required>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group" id="institution1">
                                <label for="institution">INSTITUCIÓN</label>
                                <select name="institution" id="institution" class="form-control select2"
                                    title="Seleccione Institución" multiple required></select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="description">DESCRIPCIÓN</label>
                                <textarea name="description" id="description" class="form-control" autocomplete="off"
                                    placeholder="Ingrese Descripción" required></textarea>
                            </div>
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button id="btnSave" type="button" class="btn btn-success">Guardar</button>
                <button id="btnUpdate" type="button" class="btn btn-success">Editar</button>
            </div>
        </div>
    </div>
</div>
{{#extend "js"}}
<script type="text/javascript" src="/public/assets/js/charts/charts-js/chart.js"></script>

<script type="text/javascript" src="/public/app/charts/js/controller.js"></script>
<script type="text/javascript" src="/public/app/charts/js/main.js"></script>
{{/extend}}