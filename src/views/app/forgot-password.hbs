{{#extend "css"}}
<link rel="stylesheet" type="text/css" href="/public/global/assets/sweetalert2/dist/sweetalert2.min.css" />
<link rel="stylesheet" href="/public/app/login/css/style.css">
<style>
    .corfo {
        width: 18rem !important;
    }

    @media screen and (max-width: 400px) {
        .corfo {
            width: 18rem !important;
        }
    }
</style>
{{/extend}}

<div class="accountbg"></div>

<div class="account-pages mt-5 pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <div class="mb-1">
                                <a><img src="/public/global/images/logo.png" style="height: 6rem;" alt="logo"></a>
                            </div>
                            <div class="text-center"> <img src="/public/app/login/images/corfo.png"
                                    class="corfo img-responsive" alt="corfo"> </div>
                        </div>

                        <div class="p-2">
                            <h4 class="font-size-18 mt-2 text-center">Recupera Tu Contraseña</h4>
                            <p class="text-muted text-center mb-4">Ingresa tus datos para continuar.</p>
                            <form id="crud-form" class="form-horizontal">
                                <div class="form-group">
                                    <label for="login">Email</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Ingresa Email" required>
                                    <div class="form-group">
                                        <a href="/login" class="text-muted float-right"><small>¿Ya eres usuario? Inicia
                                                Sesión en Safety School</small></a>
                                    </div>
                                </div>
                                <div class="form-group row mt-4">
                                    <div id="divButtonSave" class="offset-md-6 col-sm-6 text-right">
                                        <button id="btnSave" type="button"
                                            class="btn bg-indigo w-md waves-effect waves-light">Recuperar
                                            Contraseña</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#extend "js"}}
<script type="text/javascript" src="/public/global/assets/sweetalert2/dist/sweetalert2.all.min.js"></script>
<script type="text/javascript" src="/tools/parsleyjs/dist/parsley.min.js"></script>
<script type="text/javascript" src="/tools/parsleyjs/dist/i18n/es.js"></script>
<script type="text/javascript" src="/public/app/forgot-password/js/controller.js"></script>
<script type="text/javascript" src="/public/app/forgot-password/js/main.js"></script>
{{/extend}}