<div class="page-header border-bottom-0">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="fad fa-list-alt"></i> <span class="font-weight-semibold">ACTIVIDADES</span>
            </h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
        <div class="header-elements mb-3 mb-md-0">
            <div class="d-flex justify-content-center">
                <button id="btnCreate" type="button" class="btn btn-success d-inline-block border-left-1">
                    NUEVO <i class="fad fa-plus-circle fa-lg fa-fw"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="content pt-0">
    <div class="card">
        <div class="card-body card-body-theme">
            <h5 class="card-title card-title-theme">Listado Actividades</h5>
        </div>

        <table id="crud-datatable" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th class="study_date">ACTIVIDAD</th>
                    <th class="study_date">DESCRIPCIÓN</th>
                    <th class="study_date">OPERACIONES</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="modal-crud" class="modal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">FORMULARIO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="crud-form">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label for="name">NOMBRE</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre"
                                    autocomplete="off" required>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group" id="institution1">
                                <label for="institution">INSTITUCIÓN</label>
                                <select name="institution" id="institution" class="form-control select2"
                                    title="Seleccione Institución" multiple required></select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="description">DESCRIPCIÓN</label>
                                <textarea name="description" id="description" class="form-control" autocomplete="off"
                                    placeholder="Ingrese Descripción" required></textarea>
                            </div>
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button id="btnSave" type="button" class="btn btn-success">Guardar</button>
                <button id="btnUpdate" type="button" class="btn btn-success">Editar</button>
            </div>
        </div>
    </div>
</div>
